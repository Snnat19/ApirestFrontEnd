@model ApplicationFrontEnd.Models.DTO.SupplierDTO

@{
    ViewData["Title"] = "Create Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="titulito">Crear un Proveedor</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompanyName">Nombre de la compañía</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompanyName" class="form-control" placeholder="Ingrese nombre de la empresa" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ContactName">Nombre</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ContactName" class="form-control" placeholder="Ingrese su nombre" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ContactTitle">Título</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ContactTitle" class="form-control" placeholder="Ingrese su título" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="City">Ciudad</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" class="form-control" placeholder="Ingrese su ciudad" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Country">País</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Country" class="form-control" placeholder="Ingrese su país" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Phone">Teléfono</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Phone" class="form-control" placeholder="Ingrese su teléfono" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Email">Email</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Email" class="form-control" placeholder="Ingrese su email" />
                    </div>
                </div>

                <div class="form-group row mt-4">
                    <div class="col">
                        <button type="submit" class="btn btn-success btn-block">Crear Proveedor</button>
                        <a asp-action="Index" class="btn btn-secondary btn-block mt-2">Volver</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
