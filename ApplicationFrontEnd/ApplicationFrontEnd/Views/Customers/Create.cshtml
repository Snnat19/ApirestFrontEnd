@model ApplicationFrontEnd.Models.DTO.CustomerDTO

@{
    ViewData["Title"] = "Create Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container p-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="titulito">Crear un cliente</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <form method="post" asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="FirstName"></label>
                        </div>
                        <div class="col-8">
                        <input asp-for="FirstName" class="form-control" placeholder="Ingrese su nombre" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="LastName"></label>
                        </div>
                        <div class="col-8">
                        <input asp-for="LastName" class="form-control" placeholder="Ingrese sus apellido" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="City"></label>
                        </div>
                        <div class="col-8">
                        <input asp-for="City" class="form-control" placeholder="Ingrese su ciudad" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Country"></label>
                        </div>
                        <div class="col-8">
                        <input asp-for="Country" class="form-control" placeholder="Ingrese su pais" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Phone"></label>
                        </div>
                        <div class="col-8">
                        <input asp-for="Phone" class="form-control" placeholder="Ingrese su numero de telefono" />
                        </div>
                    </div>

                <div class="form-group row mt-4">
                    <div class="col">
                        <button type="submit" class="btn btn-success btn-block">Crear Cliente</button>
                        <a asp-action="Index" class="btn btn-secondary btn-block mt-2">Volver</a>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>

